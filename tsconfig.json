// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020", // Target ES2020 features
    "module": "CommonJS", // CommonJS module system
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables compatibility with ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
    "outDir": "./dist" // Output directory for compiled files
  },
  "include": ["src/**/*"] // Include all TypeScript files in src
}
